{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    ".serverless",
    ".webpack",
    "_warmup",
    ".vscode"
  ]
}